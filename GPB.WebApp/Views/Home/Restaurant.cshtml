    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Zoom in ve Zoom out efekti
            const roomCard = document.querySelector('.room-card');

            function startZoomEffect() {
                roomCard.style.transition = 'transform 10s ease-in-out'; // Geçiş süresi
                roomCard.style.transform = 'scale(1.15)'; // Başlangıçta biraz büyütme

                setInterval(() => {
                    roomCard.style.transform = roomCard.style.transform === 'scale(1.15)' ? 'scale(1)' : 'scale(1.15)';
                }, 5000); // 5 saniyede bir büyütme ve küçültme
            }
            startZoomEffect();
            // Hover efekti için
            roomCard.addEventListener('mouseover', () => {
                roomCard.style.transition = 'transform 0.3s ease'; // Hover geçiş süresi
                roomCard.style.transform = 'scale(1.3)'; // Hover sırasında %30 büyütme
            });

            roomCard.addEventListener('mouseout', () => {
                roomCard.style.transition = 'transform 0.3s ease'; // Hover geçiş süresi
                roomCard.style.transform = 'scale(1)'; // Hover sonrası normal boyut
            });

            // Diğer efektler veya işlevler buraya eklenebilir
        });
