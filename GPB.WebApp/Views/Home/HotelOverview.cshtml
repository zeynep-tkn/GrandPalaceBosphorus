    <script>
        let slideIndex = 0;
        const slides = document.querySelectorAll(".header-slideshow img");

        function showSlides() {
            slides.forEach((slide, index) => {
                slide.classList.remove("active");
                if (index === slideIndex) {
                    slide.classList.add("active");
                }
            });
            slideIndex = (slideIndex + 1) % slides.length;
            setTimeout(showSlides, 3000); // Slide değişim süresi 3 saniye
        }



        let galleryIndex = 0;
        const galleryImages = document.querySelectorAll(".gallery .slide");
        const gallerySlides = document.querySelector(".gallery .slides");

        function plusSlides(n) {
            galleryIndex += n;
            if (galleryIndex < 0) {
                galleryIndex = galleryImages.length - 1;
            } else if (galleryIndex >= galleryImages.length) {
                galleryIndex = 0;
            }
            gallerySlides.style.transform = `translateX(${-galleryIndex * 100}%)`;
        }

        showSlides(); // İlk kaydırıcıyı başlatma

        document.querySelector(".prev").addEventListener("click", () => plusSlides(-1));
        document.querySelector(".next").addEventListener("click", () => plusSlides(1));



        </script>
