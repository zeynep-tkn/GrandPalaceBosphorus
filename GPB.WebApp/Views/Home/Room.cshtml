            position: relative; /* Konteynerin pozisyonunu belirtiyoruz */
            z-index: 2; /* Kartların resmin üzerine gelmemesi için üstte olmalı */
        }

        .room-card {
            width: calc(50% - 20px); /* Kart genişliği, yarı genişlikte */
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            cursor: pointer;
            margin-bottom: 20px;
            position: relative; /* Kartların pozisyonunu belirtiyoruz */
            z-index: 1; /* Kartların resmin üzerine gelmemesi için üstte olmalı */
        }

            .room-card:hover {
                transform: scale(1.02);
            }

        .room-image {
            height: 400px;
            width: 100%;
            overflow: hidden;
        }

            .room-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

        .room-details {
            padding: 15px;
        }

        .room-title {
            font-size: 1.5em;
            font-weight: bold;
            margin-bottom: 0.5em;
        }

        .room-description {
            margin-bottom: 1em;
        }

        .room-price {
            font-size: 1.2em;
            color: whitesmoke;
        }

        .btn-more {
            display: inline-block;
            padding: 10px 20px;
            background-color: black;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .room-price {
            color: black
        }

        .btn-more:hover {
            background-color: black;
        }


        /* Oda imkanları bölümü stilleri */
        .amenities-section {
            max-width: 1000px;
            height: 200px;
            margin: 15px auto;
            text-align: center;
            background-color: lightgray;
        }

        .amenity {
            display: inline-block;
            text-align: center;
            width: 100px; /* Her bir öğe için genişlik ayarı */
            margin: 15px;
        }

        .amenity-icon {
            font-size: 2em;
            margin-bottom: 10px;
        }

        .amenity-title {
            font-size: 0.8em;
            font-weight: bold;
        }
        /* POLİTİKALAR */

        /* Ana politika bölümü */
        .policy-section {
            max-width: 1000px; /* Maksimum genişlik */
            height: 550px;
            margin: 0 auto; /* Ortalanmış */
            padding: 20px; /* Dolgu alanı */
            font-family: Arial, sans-serif; /* Yazı tipi */
            line-height: 1.2; /* Satır yüksekliği */
            background-color: lightgray; /* Arka plan rengi */
        }

            /* Başlık */
            .policy-section h2 {
                text-align: center; /* Metin ortalanmış */
            }

        /* Politika sütunları için konteyner */
        .policy-container {
            display: flex; /* Flexbox kullanarak sütunları yan yana hizala */
            justify-content: space-between; /* Aralarında boşluk bırakarak hizala */
        }

        /* Her politika sütununun stil ayarları */
        .policy-column {
