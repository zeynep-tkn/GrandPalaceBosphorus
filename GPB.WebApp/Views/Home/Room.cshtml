    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        /* Temel sayfa stilleri */
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            background-color: black;
        }

        /* Başlık konteyneri stilleri */
        .header-container {
            position: relative;
            width: 100%;
            height: 700px;
            overflow: hidden;
        }

            .header-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.6s ease;
                z-index: 0; /* Arka plan görselinin z-index değeri */
            }

                .header-container img:hover {
                    transform: scale(1.2); /* Görsel üzerine gelince %20 daha büyük olacak şekilde büyüme efekti */
                }

        .header-overlay {
            position: absolute;
            top: 0;
            left: 0;
            color: white;
            z-index: 1;
            padding: 20px; /* Üstten ve soldan boşluk bırakmak için */
            text-align: center;
            width: 100%;
        }

        .hotel-logo {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin-bottom: 0.5em;
            z-index: 2; /* Hotel adı ve logo için z-index değeri */
        }

            .hotel-logo i {
                font-size: 1.5em;
                margin-right: 0.5em;
            }

        .hotel-name {
            font-size: 1.8em;
            font-weight: bold;
            font-style: italic;
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8); /* Hafif gölgeleme */
        }

        .general-overview {
            font-size: 3em;
            font-weight: bold;
            margin-bottom: 0.5em;
        }

        .hotel-sentence {
            font-size: 1em;
            margin-bottom: 1em;
        }

        /* Buton özellikleri */


        .buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin: 40px 0;
        }

        button {
            padding: 10px 20px;
            font-size: 2em;
            background-color: whitesmoke;
            color: black;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: whitesmoke;
            }

            button:focus {
                outline: none;
            }

        /* Oda kartı konteyneri */
        .room-cards-container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px;
