<!-- JavaScript kodunu buraya ekleyin -->
<script>
    window.addEventListener('scroll', () => {
        // Ortak Kaydırma Etkisi için Bölümler
        const sections = document.querySelectorAll('.fitness-image-container');
        sections.forEach(section => {
            const rect = section.getBoundingClientRect();
            const isInViewport = rect.top < window.innerHeight && rect.bottom > 0;

            if (isInViewport) {
                section.classList.add('scroll-effect');
            } else {
                section.classList.remove('scroll-effect');
            }
        });
    });

    // Hizmet ve Olanaklar için Kaydırma İşlemi
    document.querySelectorAll('.service-item').forEach(item => {
        item.addEventListener('click', () => {
            const targetId = item.getAttribute('data-target');
            const targetElement = document.querySelector(targetId);

            if (targetElement) {
                targetElement.scrollIntoView({
                    behavior: 'smooth', // Kaydırma efekti
                    block: 'start' // Hedefin başlangıçta görünmesini sağlar
                });
            }
        });
    });

    // Offer Slider için JavaScript kodu
    const offerContainer = document.querySelector('.offer-container');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    let currentIndex = 0;
    const offers = document.querySelectorAll('.offer');
    const totalOffers = offers.length;

    function updateOffer() {
        offerContainer.style.transform = `translateX(-${currentIndex * 100}%)`;
    }

    prevBtn.addEventListener('click', () => {
        currentIndex = (currentIndex > 0) ? currentIndex - 1 : totalOffers - 1;
        updateOffer();
    });

    nextBtn.addEventListener('click', () => {
        currentIndex = (currentIndex < totalOffers - 1) ? currentIndex + 1 : 0;
        updateOffer();
    });


</script>

